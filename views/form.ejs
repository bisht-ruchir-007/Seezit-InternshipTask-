  <body style="background: rgb(63, 226, 158);">
    <center>
      <h1 class="title text-center">Seezit</h1>
      <p class="text-center">An Internship selection task</p>
      <p class="text-center info"><b>Fill Up the form</b></p>

      <div class="container">
        <form method="POST" action="/saveAddressviaMap" id="user_form">
          <div class="form-group">
            <label for="inputAddress">Address</label>
            <input
              type="text"
              class="form-control"
              id="inputAddress"
              name="inputAddress1"
              placeholder="Address Line 1"
              required
            />
          </div>
          <div class="form-group">
            <label for="inputAddress2">Address 2</label>
            <input
              type="text"
              class="form-control"
              id="inputAddress2"
              name="inputAddress2"
              placeholder="Address Line 2 (Optional)"
            />
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputCity">City</label>
              <input
                type="text"
                class="form-control"
                id="inputCity"
                name="inputCity"
                required
                placeholder="City"
              />
            </div>
            <div class="form-group col-md-4">
              <label for="inputState">State</label>
              <input
                type="text"
                class="form-control"
                id="inputState"
                name="inputState"
                placeholder="State"
                required
              />
            </div>
            <div class="form-group col-md-2">
              <label for="inputPinCode">PinCode</label>
              <input
                type="number"
                class="form-control"
                id="inputPinCode"
                name="inputPinCode"
                placeholder="Pin Code"
                required
              />
            </div>
          </div>

          <button type="submit" class="btn btn-primary">SAVE</button>
        </form>
        <br />
        <a href="/add_address"
          ><button class="btn back">
            BACK
          </button></a
        >
      </div>
    </center>
